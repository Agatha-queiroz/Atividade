    left: 80%;
}

------- PARTE QUE COMENTEI DEPOIS -------- 
section{
    width: 100%;
    height: 100vh;
}

#pagina1{
    display: grid;
    grid-template-columns: [colun1]1fr[colun2]2fr[colun3]1fr; /*fr é uma fração, a coluna do meio tem o dobro da fração em relação as outras*/
    grid-template-rows: 20% 60% 20%;
    grid-template-areas: "col1 col2 col3" "col1 col2 col3" "col1 col2 col3"; /* as aspas são as linhas, o valor dentro são as colunas*/
     /* 3 linhas e 3 colunas*/ /*quando coloca os mesmos nomes, mescla*/
     justify-items: end; /*alinha na horizontal*/
     align-self:  center; /*alinha na vertical, todos de uma vez*/
}

#box1{
    background-color: rgb(82, 44, 16);
    width: 100px;
    height: 100px;
    grid-column: colun2; /*mudar de coluna*/
    grid-row: 2; /*muda a linha do elemento*/
    left: 40%;
    top: 40%;
    position: relative;
}
