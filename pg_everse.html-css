------------- PARTE DO CSS -------------

@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Tinos:ital,wght@0,400;0,700;1,400;1,700&display=swap');

*{margin: 0%;}

img{ /* imagem de fundo*/
  background-size: cover;
  width: 100%;
  max-height: 100vh;
  position: absolute;
  z-index: 1;
}

 h1{ /*parte do título*/
    position: absolute;
    top: 28%;
    left: 5%;
    z-index: 1;
    color: #C89B3C;
    letter-spacing: 7px; /*espaçamento entre as letras*/
    font-size: 25px;
    font-family: "Tinos";
    font-weight: 100; /*deixa a letra mais fina*/
}
.texto{ /* parte do texto*/
    position: absolute;
    top: 40%;
    left: 5%;
    z-index: 1;
    color: rgb(236, 233, 233);
    font-size: 15px;
    font-family: "Tinos";
    opacity: 0,8;
}

.botao { /*o botão*/
    background-color:#7E4F18;   /* cor de fundo*/
    color: #C89B3C;  /* cor do texto */
    border: 1px solid black;
    border-radius: 20px;/* arredonda os cantos*/
    padding: 8px 28px;  /* "8" é espaço em cima e em baixo/ "28" é o espaço na direita e esquerda */
    font-size: 10px; /* tamanho da fonte*/
    font-family: "Playfair Display"; /* nossa fonte */
    cursor: pointer; /* muda o curso do mouse para uma setinha*/
    z-index: 2; /* trazer o botão para frente*/
    position: absolute;
    top:55%;
    left: 5%; /* distância da esquerda*/
    letter-spacing: 2px; /* espaço entre as palavras*/
    
  }
  
  /* Efeito ao passar o mouse */
  .botao:hover {
    background-color: #C89B3C;  /* muda para dourado mais claro */
    color: #000; /* texto preto */
  }
  

footer{ /* o rodape */
    background-color: #7E4F18;
    color:#C89B3c;
    height: auto;
    width: 100%;
    font-size: 14px;
    font-family: "Playfair Display";
    z-index: 3;
    position:fixed ;
    left: 0;
    top: 96%;
}
 .rodape{ /* informações que ficam dentro do rodape*/
    width: 100% ;
    background-color:  #7E4F18;
    padding: 4px;
    margin: 0px;
    text-align: center;
    z-index: 4;
}
